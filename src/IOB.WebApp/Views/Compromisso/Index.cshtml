@using IOB.Application.DTO.Response;
@model IEnumerable<CompromissoResponse>

@{
    ViewData["Title"] = "Compromissos";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">IOB - Compromissos</h1>

    <div class="col mb-3">
        <a asp-controller="Compromisso" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Adicionar Compromisso</a>
    </div>
    <form asp-controller="Compromisso" asp-action="Index">
        <div class="row">
            <div class="col-md-4 mb-3">
                <input type="text" class="form-control mb-3" name="filtro" placeholder="Procurar..." />
            </div>
            <div class="col-md-4 mb-3">
                <input type="date" class="form-control mb-3" name="dataCompromisso" placeholder="Data Compromisso..." />
            </div>
            <div class="col-md-4 mb-3">
                <input type="submit" class="btn btn-md btn-primary" value="Pesquisar" />
            </div>
        </div>      
    </form>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Compromisso</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="80%">
                        <h3>@item.Titulo<br /></h3>
                        <p>
                            @item.Descricao
                        </p>
                        @item.DataCompromisso.ToString("dd-MM-yyyy HH:mm")
                    </td>                    
                    <td>
                        <div role="group" class="btn-group">
                            <a asp-controller="Compromisso" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-lg btn-primary"><i class="bi bi-pencil-square"></i>Editar</a>&nbsp;
                            <a asp-controller="Compromisso" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-lg btn-danger"><i class="bi bi-trash-fill"></i>Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>